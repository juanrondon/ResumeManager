@model ResumeManager.UI.Models.ResumeDraft.ResumeDraftCreateViewModel

<div class="panel-body">
    <div class="container">
        <div class="row col-md-12">
            <div class="col-md-1">
                <label asp-for="@Model.Interest" class="control-label req"></label>
            </div>
            <div class="col-md-5">
                <input asp-for="@Model.Interest" id="Interest" class="form-control" /><br />
                <span asp-validation-for="@Model.Interest" id="interestError" class="text-danger"></span>
            </div>
            <div class="col-md-1">
                <button type="button" id="addInterest" class="btn btn-primary">Add Interest</button>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12" id="interestsListContainer"></div>

<script>
var resumeDraftId = @Model.Id;
</script>

@* Handlebars Template *@
<script id="interests-template" type="text/x-handlebars-template">
    <div id="interestsPanel" class="panel panel-primary">
        <div class="panel-heading text-center"><strong>Interests Assigned</strong></div>
        <table class="table table-hover table-responsive">
            <tbody>
                {{#each interests}}
                <tr>
                    <td>{{name}}</td>
                    <td class="text-right">
                        <button type="button" class="btn btn-sm removeInterest" data-id="{{id}}"><i class="fa fa-times text-danger fa-lg" aria-hidden="true"></i></button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</script>