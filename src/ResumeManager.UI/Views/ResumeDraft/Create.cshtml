@model ResumeManager.UI.Models.ResumeDraft.ResumeDraftCreateViewModel

@{
    ViewData["Title"] = "CreateResumeDraft";
}

<h2>Create Resume Draft</h2>

<form id="createResumeDraftForm" asp-controller="ResumeDraft" asp-action="Create" enctype="multipart/form-data">

    <div class="container">
        <ul class="nav nav-tabs">
            <li id="ContactTab" class="active"><a data-toggle="tab" href="#ContactDetails"><i class="fa fa-user" aria-hidden="true"></i> Contact Details</a></li>
            <li id="skillsTab"><a data-toggle="tab" href="#Skills"><i class="fa fa-rocket" aria-hidden="true"></i> Skills</a></li>
        </ul>
        <div class="tab-content">
            <div id="ContactDetails" class="tab-pane fade in active">
                @Html.Partial("~/Views/ResumeDraft/_ContactDetailsPartial.cshtml", Model)
            </div>
            <div id="Skills" class="tab-pane fade">
                @Html.Partial("~/Views/ResumeDraft/_SkillsPartial.cshtml", Model)
            </div>
        </div>
        <div id="submitArea" class="row m-t-2">
            <div class="col-md-12 p-a-1 text-xs-right">
                <button type="button" class="btn btn-link">
                    Cancel Draft
                </button>
                <button type="submit" class="btn btn-primary">
                    Save Draft
                </button>
            </div>
        </div>
    </div>
</form>

