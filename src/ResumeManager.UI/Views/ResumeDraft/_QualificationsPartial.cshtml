@model ResumeManager.UI.Models.ResumeDraft.ResumeDraftCreateViewModel

<div class="panel-body">
    <div class="row">
        <input asp-for="@Model.Id" type="hidden" />
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label req">Name</label>
                <input type="text" id="Name" placeholder="Enter the qualification name" class="form-control" />

            </div>
            <div class="form-group">
                <label class="control-label req">Type</label>
                <input type="text" id="Type" placeholder="Certificate IV, Diploma, etc.." class="form-control" />

            </div>
            <div class="form-group">
                <label class="control-label req">Institution</label>
                <input type="text" id="Institution" placeholder="Enter the name of the institution" class="form-control" />

            </div>
            <div class="form-group">
                <div>
                    <label class="control-label req">Date Aquired</label>
                </div>
                <input id="DateAquired" name="DateAquired" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">Other Information</label>
                <textarea id="OtherInfo" rows="10" placeholder="Enter other relevant information" class="form-control"></textarea>
            </div>
        </div>
    </div>
    <button type="button" id="addQualification" class="btn btn-primary pull-right">Add Qualification</button>
</div>
<hr />

<div id="QualificationListContainer"></div>


@* Modal form *@
<div class="modal fade" id="qualification-editor" tabindex="-1" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">&times;</a>
                <h3>Edit Qualification</h3>
            </div>
            <input type="hidden" id="QualId" />
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label req">Name</label>
                            <input type="text" id="NameModal" placeholder="Enter the qualification name" class="form-control" />

                        </div>
                        <div class="form-group">
                            <label class="control-label req">Type</label>
                            <input type="text" id="TypeModal" placeholder="Certificate IV, Diploma, etc.." class="form-control" />

                        </div>
                        <div class="form-group">
                            <label class="control-label req">Institution</label>
                            <input type="text" id="InstitutionModal" placeholder="Enter the name of the institution" class="form-control" />

                        </div>
                        <div class="form-group">
                            <div>
                                <label class="control-label req">Date Aquired</label>
                            </div>
                            <input id="DateAquiredModal" name="DateAquired" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label">Other Information</label>
                            <textarea id="OtherInfoModal" rows="10" placeholder="Enter other relevant information" class="form-control"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn" data-dismiss="modal">Cancel</a>
                <a id="saveChangesModal" class="btn btn-primary">Save Changes</a>
            </div>
        </div>
    </div>
</div>



<script>
var resumeDraftId = @Model.Id;
</script>

<script id="qualifications-template" type="text/x-handlebars-template">
    <table class="table table-hover table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Date Aquired</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each qualification}}
            <tr>
                <td>{{name}}</td>
                <td>{{type}}</td>
                <td>{{formatDate dateAquired "MMMM - YYYY"}}</td>
                <td>
                    <button type="button" class="btn viewQual" data-id="{{id}}"><i class="fa fa-eye fa-lg" aria-hidden="true"></i></button>
                    <button type="button" href="#qualification-editor" data-id="{{id}}" data-toggle="modal" class="btn editQual"><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></button>
                    <button type="button" class="btn removeQual" data-id="{{id}}"><i class="fa fa-times text-danger fa-lg" aria-hidden="true"></i></button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</script>
