@model ResumeManager.UI.Models.ResumeDraft.ResumeDraftCreateViewModel

<div class="form-inline">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label id="skillLbl" class="control-label req">Skill</label>
                    <div class="input-group">
                        <input type="text" id="Skill" name="Skill" />
                        <span id="addSkill" class="input-group-addon"><i class="fa fa-plus" aria-hidden="true"></i></span>
                        <span id="addSkillError" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="col-md-12" id="skillsListContainer"></div>
    </div>
</div>
<script>
var resumeDraftId = @Model.Id;
</script>

@*Handlebars template*@
<script id="skills-template" type="text/x-handlebars-template">
    {{#each skills}}
    <div class="row hov">
        <div class="col-md-6">
            <span class="badge">{{this}}</span>
        </div>
        <div class="col-md-6 positionIconRemove">
            <span class="iconRemove" data-value="{{this}}"><i class="fa fa-times text-danger" aria-hidden="true"></i></span>
        </div>
    </div>
    {{/each}}
</script>
