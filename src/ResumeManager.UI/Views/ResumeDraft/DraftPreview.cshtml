    <script>
        (function () {
            var source = $("#preview-template").html();
            var template = Handlebars.compile(source);
            $(document).ready(function() {
                 var getPreview = $.ajax({
                        type: "get",
                        url: "/ResumeDraft/CreatePreview",
                        data: { resumeDraftId: @ViewBag.ResumeDraftId }
                    });
                    getPreview.done(function (data) {
                        debugger;
                        var context = { resume: data };
                        var html = template(context);
                        $("#DraftPreview").empty().html(html);

                    });            });
        })();
    </script>


