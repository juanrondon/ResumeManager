@model ResumeManager.UI.Models.DraftExperience.ExperienceViewModels

<div class="panel-body">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.AddExperienceViewModel.School" class="control-label req"></label>
                <input id="School" asp-for="@Model.AddExperienceViewModel.School" placeholder="School name (ex. UTS University)" class="form-control" />
                <span asp-validation-for="@Model.AddExperienceViewModel.School" id="SchoolError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.AddExperienceViewModel.Degree" class="control-label req"></label>
                <input id="Degree" asp-for="@Model.AddExperienceViewModel.Degree" placeholder="Certificate IV, Diploma, etc.." class="form-control" />
                <span asp-validation-for="@Model.AddExperienceViewModel.Degree" id="DegreeError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.AddExperienceViewModel.FieldOfStudy" class="control-label"></label>
                <input asp-for="@Model.AddExperienceViewModel.FieldOfStudy" id="FieldOfStudy" class="form-control" />
                <span asp-validation-for="@Model.AddExperienceViewModel.FieldOfStudy" id="FieldOfStudyError" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.AddExperienceViewModel.Grade" class="control-label"></label>
                <input asp-for="@Model.AddExperienceViewModel.Grade" id="Grade" class="form-control" />
            </div>
            <div>
                <div class="form-group col-md-5">
                    <div>
                        <label asp-for="@Model.AddExperienceViewModel.FromYear" class="control-label"></label>
                    </div>
                    <input id="FromYear" placeholder="Year" class="form-control" asp-for="@Model.AddExperienceViewModel.FromYear" />
                    <span asp-validation-for="@Model.AddExperienceViewModel.FromYear" id="FromYearError" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <div>
                        <label asp-for="@Model.AddExperienceViewModel.ToYear" class="control-label"></label>
                    </div>
                    <input id="ToYear" placeholder="Year" class="form-control" asp-for="@Model.AddExperienceViewModel.ToYear" />
                    <span asp-validation-for="@Model.AddExperienceViewModel.ToYear" id="ToYearError" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="@Model.AddExperienceViewModel.Description" class="control-label"></label>
                <textarea id="Description" asp-for="@Model.AddExperienceViewModel.Description" rows="12" placeholder="Enter other relevant information" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <button type="button" id="addExperience" class="btn btn-primary">Add Experience</button>
            </div>
        </div>
    </div>
</div>

<div id="ExperienceListContainer"></div>


@* Update Experience Modal form *@
<div class="modal fade" id="Experience-editor" tabindex="-1" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            @Html.Partial("_UpdateExperiencePartial", Model.UpdateExperienceViewModel)
        </div>
    </div>
</div>


<script>
    var resumeDraftId = @ViewData["resumeDraftId"];
</script>

<script id="Experiences-template" type="text/x-handlebars-template">
    <div id="ExperiencesPanel" class="panel panel-primary">
        <div class="panel-heading text-center"><strong>Experience</strong></div>
        <table class="table table-hover table-responsive">
            <tbody>
                {{#each Experience}}
                <tr>
                    <td>
                        <strong>{{school}}</strong><br />
                        {{degree}}
                        {{#if fieldOfStudy}}
                        - {{fieldOfStudy}}
                        {{/if}}
                        {{#if grade}}
                        - {{grade}}
                        {{/if}}
                        <br />
                        {{#ifCond fromYear "&&" toYear}}                       
                                <small>{{fromYear}} - {{toYear}}</small><br />                        
                        {{else}}
                            {{#if toYear}}
                                <small>{{toYear}}</small><br />
                            {{else}}                            
                                <small>{{fromYear}}</small><br />
                            {{/if}}
                        {{/ifCond}}
                        {{#if description}}
                        <a data-toggle="collapse" class="showHide" data-target="#desc{{id}}">See Description</a>
                        <div id="desc{{id}}" class="collapse">
                            <p class="description">{{description}}</p>
                        </div>
                        {{/if}}
                    </td>
                    <td class="text-right">
                        <button type="button" href="#Experience-editor" data-id="{{id}}" data-toggle="modal" class="btn btn-sm editEdu"><i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i></button>
                        <button type="button" class="btn btn-sm removeEdu" data-id="{{id}}"><i class="fa fa-times text-danger fa-lg" aria-hidden="true"></i></button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</script>